<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_view_fl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_cv_test"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ll_cv_bt_add"
            android:text="添加"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/ll_cv_bt_remove"
            android:layout_marginLeft="20dp"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout

        android:layout_alignBottom="@+id/cv_frist_fl"
     android:layout_alignTop="@+id/cv_frist_fl"
        android:animateLayoutChanges="true"
        android:gravity="right|center_vertical"
        android:layout_below="@+id/ll_cv_test"
        android:id="@+id/ll_cv_bole"
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:animateLayoutChanges="true"
        tools:background="@color/bg_line"
        android:id="@+id/cv_frist_fl"
        android:layout_toRightOf="@+id/ll_cv_bole"
        android:layout_below="@+id/ll_cv_test"
        android:layout_width="63dp"
        android:layout_height="63dp"/>
</RelativeLayout>